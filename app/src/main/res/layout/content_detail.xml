<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prayatna.u3118159.myshoppinglist.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/TextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title Goes HEre"
        android:id="@+id/viewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewLocation"
        style="@style/TextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Where to Buy:"
        android:id="@+id/textView2"
        style="@style/TextColor"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location Goes Here"
        android:id="@+id/viewLocation"
        style="@style/TextColor"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/viewQty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/textView3"
        style="@style/TextColor"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity Goes Here"
        android:id="@+id/viewQty"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/viewNotes"
        style="@style/TextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/textView4"
        style="@style/TextColor"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes goes here"
        android:id="@+id/viewNotes"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="40dp"
        style="@style/TextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_icon_edit"
        android:id="@+id/buttonEdit"
        android:layout_marginBottom="@dimen/button_action_bottom_margin"
        android:layout_alignParentStart="true"
        android:onClick="buttonEditItem"
        android:background="@color/warn"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_icon_delete"
        android:id="@+id/buttonDelete"
        android:layout_alignTop="@+id/buttonEdit"
        android:onClick="buttonDeleteItem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:background="@color/danger"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/buttonEdit"
        android:textSize="24sp" />

</RelativeLayout>
